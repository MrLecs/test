.row
  .col-xs-12
    = simple_form_for [:master, @group] do |f|
      .panel.panel-success
        .panel-heading
          - if @group.id
            Редактирование группы
          - else
            Новая группа
        .panel-body
          - if @group.errors.any?
            #error_explanation
              %h2= "#{pluralize(@group.errors.count, "error")} prohibited this group from being saved:"
              %ul
                - @group.errors.full_messages.each do |msg|
                  %li= msg

          = f.input :name
        .panel-footer
          = f.button :submit
