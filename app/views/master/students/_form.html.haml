= simple_form_for([:master, @student], html: { class: 'form-horizontal' }) do |f|
  - if @student.errors.any?
    #error_explanation
      %h2= "#{pluralize(@student.errors.count, "error")} prohibited this student from being saved:"
      %ul
        - @student.errors.full_messages.each do |msg|
          %li= msg

  = f.input :surname
  = f.input :name
  = f.input :patronymic

  = f.association :group, collection: Group.all.order(:name), prompt: 'Выберите группу'

  .actions
    = f.button :submit
